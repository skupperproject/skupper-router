router {
    mode: interior
    id: QDR.B
}


ssl-profile {
    name: test-ssl
    caCertFile: ${QPID_DISPATCH_HOME_INSTALLED}/tests/config-2/ca-certificate.pem
    certFile: ${QPID_DISPATCH_HOME_INSTALLED}/tests/config-2/client-certificate.pem
    privateKeyFile: ${QPID_DISPATCH_HOME_INSTALLED}/tests/config-2/client-private-key.pem
    password: client-password
}

##
## Listeners and Connectors
##
listener {
    host: 0.0.0.0
    port: 20101
    saslMechanisms: ANONYMOUS
}

connector {
    role: inter-router
    host: 0.0.0.0
    port: 20102
    saslMechanisms: EXTERNAL
    sslProfile: test-ssl
}

address {
    prefix: closest
    distribution: closest
}

address {
    prefix: multicast
    distribution: multicast
}

address {
    prefix: unicast
    distribution: closest
}

address {
    prefix: exclusive
    distribution: closest
}

address {
    prefix: broadcast
    distribution: multicast
}
